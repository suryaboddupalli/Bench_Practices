{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": 1,
        "no-empty": 1,
        "no-irregular-whitespace": 1,
        "@typescript-eslint/no-var-requires": 1,
        "@typescript-eslint/naming-convention": [
            1,
            {
                "selector": "default",
                "format": [
                    "strictCamelCase"
                ]
            },
            {
                "selector": "variable",
                "format": [
                    "strictCamelCase",
                    "UPPER_CASE"
                ]
            },
            {
                "selector": "interface",
                "format": [
                    "PascalCase"
                ]
            }
        ]
    }
}